{
    "arrowParens": "avoid",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "jsxSingleQuote": false,
    "insertPragma": true,
    "printWidth": 80,
    "quoteProps": "consistent",
    "trailingComma": "all",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "overrides": [
        {
            "files": ["**/*.json"],
            "options": {
                "singleQuote": false,
                "insertPragma": false
            }
        }
    ]
}
